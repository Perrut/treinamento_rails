<% provide(:title, "#{@post.user.name} #{@post.updated_at.to_date} #{@post.id} | ")%>
<p id="notice"><%= notice %></p>
<p id="error"><%= alert %></p>

<p>
  <strong>Content:</strong>
  <%= @post.content %>
</p>

<p>
  <strong>User:</strong>
  <%= @post.user.name %>
</p>

<%= link_to 'Edit | ', edit_post_path(@post) if current_user == @post.user %>
<%= link_to 'Back', posts_path %>
