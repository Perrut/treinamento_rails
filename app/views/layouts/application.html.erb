<!DOCTYPE html>
<html>
  <head>
    <title><%= yield(:title) %>Blógui</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <% if logged_in? %>
      <h2 id="notice">Você está logado! <%= current_user.name %> <%= link_to "(Log out)", logout_path, method: :delete %></h2>
    <% end %>
    <%= yield %>
  </body>
</html>
